{
  "manifest_version": 3,
  "name": "YouTube Annotation Sidebar",
  "version": "1.0",
  "description": "Control, take notes, and highlight YouTube videos from a sidebar.",
  "permissions": [
    "storage",
    "tabs",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open YouTube Sidebar"
  }
}